{
  "openapi": "3.0.3",
  "info": {
    "title": "MEDIAMIPA - REST API",
    "description": "This is a REST API for MEDIAMIPA (MEDIA Modern Integrated Portal Academia)",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:9000" }],
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["Auth API"],
        "description": "Melakukan proses autentikasi dan otorisasi",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "student_nisn": {
                    "type": "string",
                    "description": "Student nisn",
                    "example": "1234567890"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password must be at least 8 characters long",
                    "minLength": 8
                  }
                },
                "required": ["email", "student_nisn", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success register new user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "User login successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "access_token": { "type": "string" },
                        "refresh_token": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/auth/logout": {
      "delete": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Auth API"],
        "description": "Menghapus otorisasi pengguna",
        "responses": {
          "200": {
            "description": "Success logout user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Logout user successfully"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/posts": {
      "get": {
        "tags": ["Dashboard API"],
        "description": "Get list berita / pengumuman",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "description": "postId",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "count of retreve data",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get list news data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "id-1"
                          },
                          "title": {
                            "type": "string",
                            "example": "judul pengumuman 1"
                          },
                          "description": {
                            "type": "string",
                            "example": "deskripsi berita atau pengumuman 1"
                          },
                          "image": {
                            "type": "string",
                            "example": "image.com"
                          },
                          "type": {
                            "type": "string",
                            "example": "news"
                          },
                          "date": {
                            "type": "string",
                            "example": "17-08-2025"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/posts/{id}": {
      "get": {
        "tags": ["Dashboard API"],
        "description": "Melihat detail berita/ pengumuman",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "newsId",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get detail news",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "id-1"
                        },
                        "title": {
                          "type": "string",
                          "example": "judul pengumuman 1"
                        },
                        "description": {
                          "type": "string",
                          "example": "deskripsi berita atau pengumuman 1"
                        },
                        "image": {
                          "type": "string",
                          "example": "image.com"
                        },
                        "type": {
                          "type": "string",
                          "example": "news"
                        },
                        "date": {
                          "type": "string",
                          "example": "17-08-2025"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "JwtAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "Enter the token with the `Bearer ` prefix, e.g. Bearer abcde12345"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "error" },
          "message": { "type": "string", "example": "error.message" }
        }
      }
    }
  }
}
